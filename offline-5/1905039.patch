+int futex_wake(uint64 va, uint64 count)
+{
+  struct proc *p = myproc();
+
+  acquire(p->memlock_used);
+
+  uint64 va0 = PGROUNDDOWN(va);
+  uint64 pa = walkaddr(p->pagetable, va0) + va - va0;
